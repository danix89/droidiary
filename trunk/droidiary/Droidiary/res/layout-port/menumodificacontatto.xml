<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agendaportrait2" >

    <TextView
        android:id="@+id/modificacontatti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="26dp"
        android:text="@string/menumodificacontatto"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <ListView
        android:id="@+id/listacontatti"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/modificacontatti"
        android:layout_below="@+id/modificacontatti"
        android:layout_marginBottom="28dp" >

    </ListView>

</RelativeLayout>