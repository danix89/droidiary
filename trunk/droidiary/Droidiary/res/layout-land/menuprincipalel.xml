<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agendalandscape" >

    <TextView
        android:id="@+id/menuprincipale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:text="Menù Principale"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonamenuppuntamenti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/menuprincipale"
        android:layout_centerVertical="true"
        android:layout_marginLeft="62dp"
        android:text="Menù Appuntamenti" />

    <Button
        android:id="@+id/buttonmenurubrica"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonamenuppuntamenti"
        android:layout_alignBottom="@+id/buttonamenuppuntamenti"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:text="Menù Rubrica" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/menuprincipale"
        android:layout_alignTop="@+id/buttonamenuppuntamenti"
        android:src="@drawable/rubrica" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonmenurubrica"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/buttonmenurubrica"
        android:src="@drawable/appuntamenti" />

</RelativeLayout>
